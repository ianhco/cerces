{
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "inlineSourceMap": false,
        "listEmittedFiles": false,
        "listFiles": false,
        "moduleResolution": "Bundler",
        "noFallthroughCasesInSwitch": true,
        "pretty": true,
        "resolveJsonModule": true,
        "rootDir": "src",
        "skipLibCheck": true,
        "strict": true,
        "traceResolution": false,
        "outDir": "dist",
        "target": "esnext",
        "module": "esnext",
        "types": [
            "@types/node",
            "@types/jest",
        ]
    },
    "exclude": [
        "node_modules",
        "dist",
    ],
    "include": [
        "src",
    ]
}